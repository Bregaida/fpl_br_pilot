# Enable Lombok's experimental features
config.stopBubbling = true
lombok.anyConstructor.addConstructorProperties = true
lombok.addLombokGeneratedAnnotation = true
lombok.anyConstructor.suppressConstructorProperties = true

# Enable builder support for all @Value and @Data classes
lombok.builder.className = Builder
lombok.builder.flagUsage = WARNING
lombok.copyableAnnotations += org.hibernate.annotations.CreationTimestamp
lombok.copyableAnnotations += org.hibernate.annotations.UpdateTimestamp

# Configure logging for lombok
lombok.log.fieldIsStatic = true
lombok.log.fieldName = log

# Enable @With for immutable objects
lombok.with.flagUsage = WARNING

# Enable @Value and @Builder together
lombok.noArgsConstructor.extraPrivate = true

# Configure delombok
delombok.addSupportForAsyncAndSyncLazy = true

# Enable experimental features
# lombok.experimental.flagUsage = WARNING

# Configure getter/setter naming
lombok.accessors.chain = true
lombok.accessors.fluent = false
lombok.getter.noIsPrefix = true

# Configure @ToString and @EqualsAndHashCode
lombok.toString.doNotUseGetters = false
lombok.toString.includeFieldNames = true
lombok.equalsAndHashCode.doNotUseGetters = false

# Configure @Builder
lombok.builder.flagUsage = WARNING
lombok.singular.auto = true
lombok.singular.useGuava = true

# Configure @Data
lombok.data.flagUsage = WARNING

# Configure @Value
lombok.value.flagUsage = WARNING

# Configure @FieldDefaults
lombok.fieldDefaults.defaultPrivate = true
lombok.fieldDefaults.defaultFinal = false

# Configure @UtilityClass
lombok.utilityClass.flagUsage = WARNING
